<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:id="@+id/fragment_start">

    <Button
        android:id="@+id/start_bluetooth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="119dp"
        android:layout_marginStart="119dp"
        android:layout_marginTop="197dp"
        android:text="Connect Bluetooth"
        />

    <Button
        android:id="@+id/start_wifi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/start_bluetooth"
        android:layout_alignEnd="@+id/start_bluetooth"
        android:layout_alignRight="@+id/start_bluetooth"
        android:layout_marginBottom="86dp"
        android:text="Connect Wifi"
        android:layout_alignLeft="@+id/start_bluetooth"
        android:layout_alignStart="@+id/start_bluetooth"
        />
</RelativeLayout>
